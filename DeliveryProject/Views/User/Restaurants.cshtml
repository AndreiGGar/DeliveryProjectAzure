@model IEnumerable<DeliveryProjectAzure.Models.Restaurant>

@{
    ViewData["Title"] = "Restaurants";
}

<div class="row">
    <div class="col-md-2 p-4">
        <partial name="_MenuUsuario" />
    </div>

    <div class="col-md-10">
        <p>
            <a asp-action="Create" class="btn btn-success">Crear nuevo restaurante</a>
        </p>
        <table class="table table-hover table-bordered w-auto">
            <thead class="bg-secondary">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
